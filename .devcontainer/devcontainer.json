{
  "name": "ubuntu-noble-dev",
  "image": "ubuntu-noble-dev:latest",
  "containerUser": "root",
  "runArgs": [
    "--privileged",
    "--network=host",
    "--gpus", "all",
    "--env", "DISPLAY",
    "--env", "QT_X11_NO_MITSHM=1",
    "--env", "NVIDIA_VISIBLE_DEVICES=all",
    "--env", "NVIDIA_DRIVER_CAPABILITIES=compute,utility,display"
    // ========== WSL ===========
    // "--env", "LD_LIBRARY_PATH=/usr/lib/wsl/lib",
    // "--env", "WAYLAND_DISPLAY=$WAYLAND_DISPLAY",
    // "--device", "/dev/dri:/dev/dri",
    // "--device", "/dev/dxg:/dev/dxg",
    // "--ipc=host",
    // "--pid=host"
    // ==============================
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "mutantdino.resourcemonitor",
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "ms-python.python",
        "eamodio.gitlens",
        "aaron-bond.better-comments",
        "llvm-vs-code-extensions.vscode-clangd",
        "xaver.clang-format",
        "ms-azuretools.vscode-docker",
        "cschlosser.doxdocgen"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "fish",
        "clangd.arguments": [
          "--function-arg-placeholders=false",
          "--header-insertion-decorators",
          "--header-insertion=never",
          "--enable-config",
          "--compile-commands-dir=/home/ubuntu/${localWorkspaceFolderBasename}/build"
        ],
        "clangd.checkUpdates": true,
        "clangd.fallbackFlags": ["-std=c++20"],
        "clang-format.language.apex.style": "/home/ubuntu/${localWorkspaceFolderBasename}/.clang-format",
        "doxdocgen.generic.authorName": "lddnb",
        "doxdocgen.generic.authorEmail": "lz750126471@gmail.com"
      }
    }
  },
  // ========== Ubuntu ===========
  "containerEnv": {
    "DBUS_SYSTEM_BUS_ADDRESS": "unix:path=/host/run/dbus/system_bus_socket"
  },
  "mounts": [
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
    "source=/dev,target=/dev,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.gitconfig,target=/home/ubuntu/.gitconfig,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.ssh,target=/home/ubuntu/.ssh,type=bind,consistency=cached",
    "source=${localEnv:HOME}/data/rosbag/others_bag,target=/home/ubuntu/data,type=bind,consistency=cached"
  ],
  // ========== WSL ===========
  // "mounts": [
  //   "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
  //   "source=/home/xx/.ssh,target=/home/ubuntu/.ssh,type=bind,readonly",
  //   "source=/mnt/wslg,target=/mnt/wslg,type=bind,consistency=cached",
  //   "source=/usr/lib/wsl,target=/usr/lib/wsl,type=bind,consistency=cached",
  //   "source=/home/xx/win,target=/home/ubuntu/win,type=bind,consistency=cached"
  // ],
  // ==============================
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/ubuntu/${localWorkspaceFolderBasename},type=bind",
  "workspaceFolder": "/home/ubuntu/${localWorkspaceFolderBasename}"
}